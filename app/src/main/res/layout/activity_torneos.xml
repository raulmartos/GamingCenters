<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#D7D6D7"
                                                   tools:context=".create.CreateTorneos">

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="314dp"
            android:layout_height="530dp"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/top_background" app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/torneos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TORNEOS"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="10dp"/>

    <ScrollView
            android:layout_width="293dp"
            android:layout_height="276dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="208dp"
            android:layout_marginStart="68dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <EditText
                    android:id="@+id/edtTitulo"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Titulo"
                    android:background="@drawable/recuadros"
                    android:textStyle="bold"
                    tools:ignore="Autofill,HardcodedText,MissingConstraints"
            />
            <EditText
                    android:id="@+id/edtJugadoresTot"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:hint="Jugadores Totales"
                    android:contentDescription="Jugadores Totales"
                    android:background="@drawable/recuadros"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="EditableContentDescCheck"
            />
            <Spinner
                    android:id="@+id/spLugar"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/lugar"
                    android:background="@drawable/recuadros"
                    android:textStyle="bold"
            />
            <EditText
                    android:id="@+id/edtPrecio"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:contentDescription="Precio"
                    android:hint="Precio Entrada"
                    android:background="@drawable/recuadros"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="EditableContentDescCheck"/>
            <EditText
                    android:id="@+id/edtFecha"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:contentDescription="Fecha"
                    android:hint="Fecha"
                    android:background="@drawable/recuadros"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="date"
                    tools:ignore="EditableContentDescCheck"/>
            <Spinner
                    android:id="@+id/spPlataforma"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/plataformas"
                    android:background="@drawable/recuadros"
                    android:textStyle="bold"
            />
            <Spinner
                    android:id="@+id/spHora"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/horas"
                    android:background="@drawable/recuadros"
                    android:textStyle="bold"
            />
            <EditText
                    android:id="@+id/edtRecompensa"
                    android:layout_width="263dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:hint="Recompensa"
                    android:contentDescription="Recompensa"
                    android:background="@drawable/recuadros"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="EditableContentDescCheck"/>
        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAgregar"
            android:layout_width="302dp"
            android:layout_height="59dp"
            android:background="@drawable/button"
            android:layout_gravity="end|bottom"
            android:text="AGREGAR"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>