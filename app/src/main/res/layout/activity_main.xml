<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#D7D6D7"
                                                   tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGestion"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/button"
            android:text="AGREGAR"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.482"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVer"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:text="VER"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/btnGestion"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEliminar"
            android:layout_width="353dp"
            android:layout_height="48dp"
            android:background="@drawable/button"
            android:text="ELIMINAR"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/btnVer" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginTop="24dp" android:layout_marginStart="28dp"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bottom_white"
            tools:ignore="MissingConstraints" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="324dp"/>
    <TextView
            android:layout_width="246dp"
            android:layout_height="44dp"
            android:text="Gaming Centers"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="116dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp"/>
    <ImageView
            android:layout_width="434dp"
            android:layout_height="80dp" app:srcCompat="@drawable/lineaverde" android:id="@+id/imageView7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.141"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="54dp"
            android:layout_height="101dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView9"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" android:layout_marginStart="44dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>